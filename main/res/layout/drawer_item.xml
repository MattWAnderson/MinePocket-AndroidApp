<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:minHeight="@dimen/drawer_item_height"
	android:gravity="center_vertical"
	android:orientation="horizontal"
	android:background="?attr/drawerBackground">
	
	<ImageView
		android:id="@+id/drawer_item_icon"
		android:layout_width="@dimen/global_metric_xlarge"
		android:layout_height="@dimen/global_metric_xlarge"
		android:layout_marginLeft="@dimen/drawer_item_icon_padding_left"
		android:layout_marginRight="@dimen/drawer_item_icon_padding_right"
		android:adjustViewBounds="true"
		android:scaleType="fitCenter" />
	
	<TextView
		android:id="@+id/drawer_item_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginRight="@dimen/global_metric_medium"
		android:textSize="@dimen/global_text_medium"
		android:textColor="@color/global_text_primary" />
	
</LinearLayout>
